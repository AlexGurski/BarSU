<title>О нас</title>
      <link rel="shortcut icon" href="../public/image/ico.png" type="image/x-icon">
    <style type="text/css">

    h1{
      text-align: center;
      color:yellow;

      border-bottom: 5px dotted gold;
    }
      .block{
        margin-top: 5%;
        margin:20px;
        background-color: black;
        width: 100%;

        display: flex;
        border-radius: 45px;
      }

      .about{
        display: flex;
        flex-direction: column;
        height: 100%;
        width: 100%;

      }
      .name, .work{
        text-align: center;
        width: 100%;
        color:yellow;
        font-size: 30px;
      }
      .name{
            text-shadow: 1px 1px 2px white, 0 0 1em red;
        margin-top: 50px;
        margin-bottom: 10px;
      }
      .work{
        margin-top: 10px;
        margin-bottom: 50px;
      }
    #cen{
        margin-top: 5%;
    }

    </style>

</head>

<body>

 <% include blocks/header.ejs %>
  <h1>НАМ ТРЕБУЕТСЯ:</h1>

<% var vacancy = [
{work:"Инженер-программист",
    discreption:'Требуется инженер программист с высшим образованием для поддержки сайта.'},

    {work:"WEB - Дизайнер",
        discreption:'Требудется дизайнер для оформления сайта'},

]%>
       <div class='mainReserv'>
         <div class = left>
         </div>
<div class = 'center' id = 'center'>

  <div id = 'cen'>
  <% for (var i=0;i < vacancy.length; i++ ){%>
    <div class = 'block'>
        <div class = 'about'>

              <div class = 'name'>
<%=vacancy[i].work%>
              </div>
              <div class = 'work'>
<%=vacancy[i].discreption%>
